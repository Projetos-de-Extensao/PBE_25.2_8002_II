@startuml casos_de_uso
left to right direction
skinparam monochrome true
skinparam shadowing false
skinparam usecase {
  BackgroundColor White
  BorderColor Black
  ArrowColor Black
}
skinparam actor {
  BackgroundColor White
  BorderColor Black
}

actor Professor
actor Empresa
actor Coordenador

rectangle "Sistema de Gestão de Projetos Acadêmicos" {
  
  package "Autenticação" {
    usecase "Registrar Usuário" as UC01
    usecase "Login JWT" as UC02
  }
  
  package "Propostas" {
    usecase "Cadastrar Proposta" as UC03
    usecase "Avaliar Proposta" as UC04
  }
  
  package "Projetos" {
    usecase "Criar Projeto" as UC05
    usecase "Atualizar Progresso" as UC06
    usecase "Listar Projetos" as UC07
  }
  
  package "Gestão" {
    usecase "Gerenciar Grupos" as UC08
    usecase "Hall of Fame" as UC09
  }

}

' Professor
Professor --> UC01
Professor --> UC02
Professor --> UC05
Professor --> UC06
Professor --> UC07
Professor --> UC08

' Empresa
Empresa --> UC01
Empresa --> UC02
Empresa --> UC03

' Coordenador
Coordenador --> UC01
Coordenador --> UC02
Coordenador --> UC04
Coordenador --> UC05
Coordenador --> UC06
Coordenador --> UC09

@enduml
